from datetime import datetime
import random

class TestModeGenerator:
    """í…ŒìŠ¤íŠ¸ ëª¨ë“œìš© ì¹´ë“œë‰´ìŠ¤ ìƒì„±ê¸°"""
    
    def __init__(self):
        self.templates = {
            'minimal': self._get_minimal_template(),
            'modern': self._get_modern_template(),
            'professional': self._get_professional_template()
        }
    
    def generate_test_card_news(self, article, theme='modern', sections=None):
        """í…ŒìŠ¤íŠ¸ìš© ì¹´ë“œë‰´ìŠ¤ HTML ìƒì„±"""
        
        # theme íƒ€ì… ê²€ì¦ ë° ì •ê·œí™”
        if isinstance(theme, dict):
            # Dictionaryì¸ ê²½ìš° (color_themeì²˜ëŸ¼), í…Œë§ˆ ì´ë¦„ì„ ì¶”ì¶œí•˜ê±°ë‚˜ ê¸°ë³¸ê°’ ì‚¬ìš©
            # í‚¤ì›Œë“œ ê¸°ë°˜ìœ¼ë¡œ í…Œë§ˆ ê²°ì •
            if 'primary' in theme:
                # ìƒ‰ìƒ ê¸°ë°˜ í…Œë§ˆ ë§¤ì¹­
                if theme.get('primary') == '#10b981':
                    theme = 'eco'  # ì¬ìƒì—ë„ˆì§€ í…Œë§ˆ
                elif theme.get('primary') == '#3b82f6':
                    theme = 'tech'  # ESS/ê¸°ìˆ  í…Œë§ˆ
                else:
                    theme = 'modern'  # ê¸°ë³¸ê°’
            else:
                theme = 'modern'
        elif isinstance(theme, list):
            theme = theme[0] if theme else 'modern'
        elif not isinstance(theme, str):
            theme = str(theme) if theme else 'modern'
        
        # í…Œë§ˆ ì„ íƒ
        template = self.templates.get(theme, self.templates['modern'])
        
        # ë”ë¯¸ ë°ì´í„° ìƒì„±
        title = article.get('title', 'í…ŒìŠ¤íŠ¸ ì œëª©')
        content = article.get('content', 'í…ŒìŠ¤íŠ¸ ë‚´ìš©ì…ë‹ˆë‹¤.')
        summary = article.get('summary', 'í…ŒìŠ¤íŠ¸ ìš”ì•½ì…ë‹ˆë‹¤.')
        
        # ì„¹ì…˜ ì •ë³´
        section_info = ""
        if sections:
            section_info = f"<p style='color: #666; font-size: 14px;'>ì„ íƒëœ ì„¹ì…˜: {', '.join(sections)}</p>"
        
        # í…œí”Œë¦¿ì— ë°ì´í„° ì‚½ì…
        html = template.format(
            title=title[:50] + '...' if len(title) > 50 else title,
            summary=summary[:100] + '...' if len(summary) > 100 else summary,
            content=content[:200] + '...' if len(content) > 200 else content,
            section_info=section_info,
            timestamp=datetime.now().strftime("%Y-%m-%d %H:%M:%S"),
            test_id=random.randint(1000, 9999)
        )
        
        return html
    
